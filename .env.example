# Dota 2 Battle Management System - Environment Variables Template
# Copy this file to .env and customize the values for your environment

# ================================
# Application Settings
# ================================

# Application environment (development/production)
NODE_ENV=production

# Application port
APP_PORT=3000

# Application ID
VITE_APP_ID=dota2-battle-system

# ================================
# Database Configuration
# ================================

# MySQL connection string
# Format: mysql://username:password@host:port/database
DATABASE_URL=mysql://dota2user:your_password@db:3306/dota2

# MySQL Settings (for docker-compose.yml)
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=dota2
MYSQL_USER=dota2user
MYSQL_PASSWORD=your_secure_database_password
MYSQL_PORT=23330

# ================================
# Authentication
# ================================

# JWT Secret - Use a strong, random string in production
# Generate with: openssl rand -base64 32
JWT_SECRET=dota2-cai-shi-sheng-huo

# ================================
# Built-in API (Optional)
# ================================

# Built-in Forge API URL
BUILT_IN_FORGE_API_URL=

# Built-in Forge API Key
BUILT_IN_FORGE_API_KEY=
